{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "./dist/out-tsc",
    "paths": {
      "*": [
        "src/*"
      ],
      "app/*": [
        "src/app/*"
      ],
      "environments/*": [
        "src/environments/*"
      ],
      "lib/*": [
        "src/lib/*"
      ]
    },
    "removeComments": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2015",
    "types": [
      "jest",
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": ["**/node_modules", "dist", "**/.*/"]
}
